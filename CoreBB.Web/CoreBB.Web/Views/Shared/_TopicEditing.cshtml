@model CoreBB.Web.Models.Topic
@{
    
}

<div class="container col-6 offset-3" style="margin-top:120px">
    <div class="card border-info">
        <div class="card-header text-white bg-info">
            <strong>@ViewData["Reply"]</strong>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label asp-for="Title">Title *</label>
                <input class="form-control" asp-for="Title" required />
            </div>
            <div class="form-group">
                <label asp-for="Content">Content *</label>
                <textarea class="form-control" style="min-height:120px" asp-for="Content" required></textarea>
            </div>
            @if ((string)ViewData["Mode"] != "Reply")
            {
                <div class="form-group">
                    <span>Lock</span>
                    <input type="checkbox" asp-for="IsLocked" />
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" class="btn-sm btn-success" value="@ViewData["SubmitButtonText"]" />
        </div>
    </div>
</div>

