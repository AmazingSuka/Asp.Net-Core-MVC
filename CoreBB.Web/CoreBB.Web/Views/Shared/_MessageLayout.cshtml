@model CoreBB.Web.Models.Message

@{
    ViewData["Title"] = "Сообщение";
}

<div class="card border-dark">
    <div class="card-header text-white bg-dark">
        <br />
        From: <a asp-controller="User" asp-action="Detail" asp-route-name="@Model.FromUser.Name">@Model.FromUser.Name</a>
        To: <a asp-controller="User" asp-action="Detail" asp-route-name="@Model.ToUser.Name">@Model.ToUser.Name</a>
    </div>
    <div class="card-body">
        @Model.Content
    </div>
    <div class="card-footer">
        @if ((string)ViewData["Mode"] != "Deleting")
        {
            <a class="btn-sm btn-warning" asp-action="Create" asp-route-tousername="@Model.FromUser.Name">Reply</a>
            <a class="btn-sm btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
        }
        else
        {
            <p>Do you want to delete the message?</p>
            <input type="submit" class="btn-sm btn-danger" value="Confirm Delete" />
        }
    </div>
</div>